---
import { Button } from '@/components/ui/button'
import BrandingLogo from '@/components/BrandingLogo.astro'
---

<style>
  :root {
    --left-margin: 2rem;
  }

  .textcolor {
    color: hsl(var(--primary-foreground));
    background-color: hsl(var(--primary));
    margin-top: 2rem;
  }

  colorBox {
    display: grid;
    grid-template-rows: 5rem 3.1rem 1.4rem 1.4rem 1.4rem 1fr 1fr 1fr;
    grid-template-columns: 20rem auto 20rem;
    gap: 0.5rem; /* 要素間の隙間を調整（オプション） */
    background-color: inherit;
    letter-spacing: 0.025rem;
    padding-top: 2rem;
  }

  subcompany {
    grid-row: 2;
    grid-column: 1;
    width: 120px;
    margin: 0 0 0 calc(var(--left-margin) + 0rem);
  }

  post-code {
    grid-row: 3;
    grid-column: 1;
    width: 300px;

    margin: 0 0 0 var(--left-margin);
  }

  location {
    grid-row: 4;
    grid-column: 1;
    width: 300px;

    margin: 0 0 0 var(--left-margin);
  }

  tel-fax {
    grid-row: 5;
    grid-column: 1;
    width: 300px;

    margin: 0 0 0 var(--left-margin);
  }

  privacy-policy {
    grid-row: 6;
    grid-column: 1;

    z-index: 100;

    margin: 1rem 0 1rem var(--left-margin);
    text-decoration: underline;
    text-decoration-color: hsl(0, 0%, 100%);
  }

  copyright {
    padding: 1rem 0 1rem 0;
  }

  @media (min-width: 768px) {
    copyright {
      grid-row: 6;
      grid-column: 3;

      justify-self: center;
    }
  }

  @media (max-width: 767px) {
    /*スマホ*/
    copyright {
      grid-row: 7;
      grid-column: 1;

      margin: 0 0 0 var(--left-margin);
    }
  }
</style>

<div class="textcolor expand">
  <colorBox>
    <BrandingLogo color="bg-primary-foreground" />
    <subcompany>株式会社デルク</subcompany>
    <post-code>〒171-0022</post-code>
    <location>東京都豊島区南池袋2-5-3 SSビル2F</location>
    <tel-fax>TEL:03-5985-4109 FAX:03-5985-4147</tel-fax>
    <Button variant="link" asChild>
      <privacy-policy>
        <a href="/privacyPolicy/">プライバシーポリシー</a>
      </privacy-policy>
    </Button>
    <copyright>©Delc Inc.</copyright>
  </colorBox>
</div>
