---
import Footer from './Footer.astro';
import FooterLink from './FooterLink.astro';
import Social from './FooterLink.astro';
---
<style>
  footer {
    display: flex;
    width: 100%;
    justify-content: center;
    padding: 0.5rem 0;
    background-color: darkblue;
  }

  link{
    gap: 1rem;
    margin-top: 2rem;
  }

  textcolor{
    color: white;  
  }

  colorBox{
    width: 100%;

    display: grid;
    grid-template-rows: 4rem 2rem 1.4rem 1.4rem 1.4rem 1fr;
    grid-template-columns: 12rem auto 13rem;

    gap: 10px; /* 要素間の隙間を調整（オプション） */

    background-color: darkblue;
  }

  company{

    grid-row: 1;
    grid-column: 1;
    
    margin: 1rem 0 -1.2rem 0;
    padding: 0 1rem;

    font-size: 50px;
    font-weight: bold;

    justify-self: end;
  }

  subcompany{
    grid-row: 2;
    grid-column: 1;

    padding: 0 1rem;

    justify-self: end;

  }

  tel{

    grid-row: 3;
    grid-column: 1;
    justify-self: end;
    align-self: start;

  }

  fax{
    grid-row: 4;
    grid-column: 1;
    justify-self: end;
    align-self: start;

  }

  tel-namuber{
    grid-row: 3;
    grid-column: 2;
    justify-self: start;
    align-self: center;

    font-size: 1rem;

  }

  fax-namuber{
    grid-row: 4;
    grid-column: 2;
    justify-self: start;
    align-self: center;

    font-size: 1rem;
  }

  reception-time{
    grid-row: 5;
    grid-column: 1;
    justify-self: end;

  }

  time{
    grid-row: 5;
    grid-column: 2;
    justify-self: start;

  }

  copyright{
    grid-row: 6;
    grid-column: 2;
    justify-self: center;

    padding: 1rem 0 1rem 0;
  }
</style>
  
