---
import Footer from './Footer.astro';
import FooterLink from './FooterLink.astro';
import Social from './FooterLink.astro';
import { Button } from "@/components/ui/button"
---
<style>
:root {
  --left-margin: 3.5rem;
}

  footer {
    display: flex;
    width: 100%;
    justify-content: center;
    padding: 0.5rem 0;
    background-color: darkblue;
  }

  link{
    gap: 1rem;
    margin-top: 2rem;
  }

  textcolor{
    color: hsl(0, 0%, 100%);  
    text-decoration-color: hsl(0, 0%, 100%);
  }

  colorBox{
    width: 100%;

    display: grid;
    grid-template-rows: 4rem 2rem 1.4rem 1.4rem 1.4rem 1fr 1fr;
    grid-template-columns: 20rem auto 20rem;

    gap: 10px; /* 要素間の隙間を調整（オプション） */

    background-color: hsl(244, 100%, 26%);
  }

  company-branding{

  grid-row: 1;
  grid-column: 1;
  width: 100px;

  margin: 1rem 0 -1.2rem var(--left-margin);

  mask-image: url(../images/branding.svg);
  mask-size: contain;
  mask-repeat: no-repeat;
  mask-position: center;
  background-color: hsl(0, 0%, 100%);
  }

  company-logo{

    grid-row: 1;
    grid-column: 1;
    width: 100px;
    
    margin: 1rem 0 -1.2rem calc(var(--left-margin) + 5rem);

    mask-image: url(../images/logo.svg);
	  mask-size: contain;
	  mask-repeat: no-repeat;
	  mask-position: center;
    background-color: hsl(0, 0%, 100%);
  }

  subcompany{
    grid-row: 2;
    grid-column: 1;
    width: 120px;

    margin: 0 0 0  calc(var(--left-margin) + 4.2rem);
  }

  post-code{
    grid-row: 3;
    grid-column: 1;
    width: 300px;

    margin: 0 0 0  calc(var(--left-margin) + 1.5rem);
  }

  location{
    grid-row: 4;
    grid-column: 1;
    width: 300px;

    margin: 0 0 0  calc(var(--left-margin) + 1.5rem);
  }

  tel-fax{
    grid-row: 5;
    grid-column: 1;
    width: 300px;

    margin: 0 0 0 calc(var(--left-margin) + 1.5rem);
  }

  privacy-policy{
    grid-row: 6;
    grid-column: 1;

    margin: 1rem 0 1rem calc(var(--left-margin) + 1.5rem);
    text-decoration:underline;
    text-decoration-color: hsl(0, 0%, 100%);
  }

  copyright{

    padding: 1rem 0 1rem 0;
  }

  @media (min-width: 768px) {
    copyright{
      grid-row: 6;
      grid-column: 3;

      justify-self: center;
    }

  }

  @media (max-width: 767px) {/*スマホ*/
    copyright{
      grid-row: 7;
      grid-column: 1;

      margin: 0 0 0 calc(var(--left-margin) + 1.5rem);
    }

  }
</style>
  
<textcolor>
<colorBox>
  <company-branding/>
  <company-logo/>
  <subcompany>株式会社デルク</subcompany>
  <post-code>〒171-0022</post-code>
  <location>東京都豊島区南池袋2-5-3 SSビル2F</location>
  <tel-fax>TEL:03-5985-4109 FAX:03-5985-4147</tel-fax>
  <Button variant="link" asChild><privacy-policy><a href="/privacyPolicy/">プライバシーポリシー</a></privacy-policy></Button>
  <copyright>©Delc Inc.</copyright>
</colorBox>
</textcolor>
