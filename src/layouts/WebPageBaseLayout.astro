---
import Header from '../components/Header.astro';
import Footer from '../components/DelcFooter.astro';
import '../styles/delcGlobal.css';
import { ViewTransitions,slide } from "astro:transitions";
const { pageTitle,tabTitle } = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{tabTitle}</title>
    <ViewTransitions />
  </head>
  <body>
    <Header />
    <div class = "company-header">
    <h1 transition:animate={slide({ duration: '1.0s'})}>{pageTitle}</h1>
    </div>
    <slot />
    <Footer />
    <script>
      import "../scripts/menu.js";
    </script>
  </body>
</html>