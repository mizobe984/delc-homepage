---
import '@/styles/globals.css'
import '@/styles/news.css'
import '@/styles/baseTopPageTextBox.css'

import WithSideMenuLayout from '../layouts/WithSideMenuLayout.astro'

import {
  Table,
  TableBody,
  TableCaption,
  TableCell,
  TableHead,
  TableHeader,
  TableRow,
} from '@/components/ui/table'
import type { SideMenuParams } from '@/lib/types'

const params: SideMenuParams = {
  companyName: 'DELC',
  pageTitle: 'HISTORY',
  pageTitleRuby: '沿革',
  tabTitle: '会社情報',
  menuTitle: 'COMPANY',
  menus: [
    { url: 'company', text: '会社情報' },
    { url: 'location', text: '所在地' },
    { url: 'history', text: '沿革' },
  ],
  menuShow: 2,
  mainBlockSize: 2,
  anchor: false,
  destinationURLs: [
    { url: 'company', ruby: '会社情報' },
    { url: 'history', ruby: '沿革' },
  ],
}

const table = [
  {
    year: '2018年',
    month: '8月',
    description: '東京都豊島区南池袋に移転',
  },
  {
    year: '2015年',
    month: '2月',
    description: '東京都豊島区東池袋に移転',
  },
  {
    year: '2014年',
    month: '4月',
    description: '株式会社デルク設立',
  },
]
---

<WithSideMenuLayout {...params}>
  <Table className="mt-16">
    <TableBody>
      {
        table.map(({ year, month, description }) => (
          <TableRow disableHover>
            <TableCell>{year}</TableCell>
            <TableCell>{month}</TableCell>
            <TableCell>{description}</TableCell>
          </TableRow>
        ))
      }
    </TableBody>
  </Table>
</WithSideMenuLayout>
