---
import '@/styles/globals.css'
import '@/styles/baseTopPageTextBox.css'
import '@/styles/location.css'

import WithSideMenuLayout from '../layouts/WithSideMenuLayout.astro'

import type { SideMenuParams } from '@/lib/types'
const params: SideMenuParams = {
  companyName: 'DELC',
  pageTitle: 'LOCATION',
  pageTitleRuby: '所在地',
  tabTitle: '会社情報',
  menuTitle: 'COMPANY',
  menus: [
    { url: 'company', text: '会社情報' },
    { url: 'location', text: '所在地' },
    { url: 'history', text: '沿革' },
  ],
  menuShow: 2,
  mainBlockSize: 2,
  anchor: false,
  destinationURLs: [
    { url: 'company', ruby: '会社情報' },
    { url: 'location', ruby: '所在地' },
  ],
}
---

<WithSideMenuLayout {...params}>
  <div class="block-padding h-[32rem] mt-16">
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1619.5335897589487!2d139.71499276586422!3d35.724566307236145!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x60188d642c47ce41%3A0xb2584b10ad5aa3be!2z44ix44OH44Or44Kv!5e0!3m2!1sja!2sjp!4v1719196506264!5m2!1sja!2sjp"
      width="100%"
      height="100%"
      style="border:0;"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"></iframe>
  </div>
</WithSideMenuLayout>
