import { ExternalLink } from 'lucide-astro'

import '@/styles/globals.css'
// import '@/styles/news.css'
import '@/styles/baseTopPageTextBox.css'
import '@/styles/delcInfoGlobal.css'

import WithSideMenuLayout from '../layouts/WithSideMenuLayout.astro'
// import Greeting from '../components/Greeting.jsx'

import {
  Table,
  TableBody,
  TableCaption,
  TableCell,
  TableHead,
  TableHeader,
  TableRow,
} from '@/components/ui/table'
import type { SideMenuParams } from '@/lib/types'

const params: SideMenuParams = {
  companyName: 'DELC',
  pageTitle: 'INFORMATION',
  pageTitleRuby: '会社概要',
  tabTitle: '会社情報',
  menuTitle: 'COMPANY',
  menus: [
    { url: 'company', text: '会社概要' },
    { url: 'location', text: '所在地' },
    { url: 'history', text: '沿革' },
  ],
  menuShow: 2,
  mainBlockSize: 2,
  anchor: false,
  destinationURLs: [{ url: 'company', ruby: '会社情報' }],
}
---

<WithSideMenuLayout {...params}>
  <Table className="mt-24">
    <TableHeader>
      <TableRow disableHover>
        <TableCell className="font-medium">会社名</TableCell>
        <TableCell>株式会社デルク</TableCell>
      </TableRow>
    </TableHeader>
    <TableBody>
      <TableRow disableHover>
        <TableCell className="font-medium"
          >適格請求書発行事業者登録番号</TableCell
        >
        <TableCell
          ><a
            href="https://www.invoice-kohyo.nta.go.jp/regno-search/detail?selRegNo=7013301035178"
            ,div
            class="underline"
            >国税庁適格請求書発行事業者公表サイト<ExternalLink /></a
          ></TableCell
        >
      </TableRow>
      <TableRow disableHover>
        <TableCell className="font-medium">設立</TableCell>
        <TableCell>2014年4月</TableCell>
      </TableRow>
      <TableRow disableHover>
        <TableCell className="font-medium">所在地</TableCell>
        <TableCell>〒171-0022 東京都豊島区南池袋2-5-3 SSビル2F</TableCell>
      </TableRow>
      <TableRow disableHover>
        <TableCell className="font-medium">代表</TableCell>
        <TableCell>代表取締役 溝部 陽史</TableCell>
      </TableRow>
      <TableRow disableHover>
        <TableCell className="font-medium">資本金</TableCell>
        <TableCell>9,000,000円</TableCell>
      </TableRow>
      <TableRow disableHover>
        <TableCell className="font-medium">事業内容</TableCell>
        <TableCell
          >デバッグ事業
          <p>SES事業</p>
          <p>SaaS事業</p></TableCell
        >
      </TableRow>
    </TableBody>
  </Table>
</WithSideMenuLayout>
