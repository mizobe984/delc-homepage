---
import '@/styles/baseTopPageTextBox.css'
import '@/styles/globals.css'
import '@/styles/contact.css'

import BaseLayout from '../layouts/BaseLayout.astro'
import { ContactForm } from '@/components/ContactForm'

const pageTitle = 'CONTACT'
const pageTitleRuby = 'お問い合わせ'
const tabTitle = 'お問い合わせ'
const destinationURLs = [{ url: 'contact', ruby: 'お問い合わせ' }]
---

<BaseLayout {pageTitle} {pageTitleRuby} {tabTitle} {destinationURLs}>
  <div class="bg-secondary expand -mb-32 pt-8 pb-32 pl-8">
    <ContactForm client:load />
  </div>
</BaseLayout>
