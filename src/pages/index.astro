import '@/styles/globals.css';
import '@/styles/news.css';
import '@/styles/baseTopPageTextBox.css';

import BaseLayout from '../layouts/BaseLayout.astro';
import Greeting from '../components/Greeting.jsx';

import localBirdImage from '../images/test_mainImg.jpg';
import localLogoImage from '../images/branding.svg';
import localContactImage from '../images/tai-bui-iPsOfXA79U4-unsplash.jpg';
import localRecruitImage from '../images/_hero12.jpg';


import NewsList from '../components/NewsList.jsx';

const articles = [
  {
    title: 'News Article 1',
    description: 'This is a description of news article 1.',
    url: 'https://www.delc.jp/company.html',
  },
  {
    title: 'News Article 2',
